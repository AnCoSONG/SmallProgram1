/* miniprogram/pages/moreinfo/moreinfo.wxss */
page {
    height: 100%;
}

.slide_holder {
    margin: 5% auto;
    width: 90%;
    height: 90%;
    padding: 2%;
    border-radius: 20rpx;
    border: 1px solid #eee;
    box-shadow: 0 0 25px 2px rgba(0, 0, 0, 0.2);
}

.slide_img {
    width: 100%;
    height: 85%;
}

.slide_content {
    width: 100%;
    height: 15%;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-content: center;
    padding-top: 20rpx;
}

.slide_text {
    padding-top: -20rpx;
}

.slide_text .slide_title {
    font-size: 30rpx;
    letter-spacing: 5rpx;
    font-weight: 600;
    text-transform: uppercase;
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-between;
    align-items: baseline;
}

.slide_text .slide_title .slide_info {
    font-size: 20rpx;
    color: #333;
    font-weight: 300;
}

.slide_text .slide_desc {
    font-size: 20rpx;
    letter-spacing: 1rpx;
}

.slide_avatar .img {
    margin-top: 30rpx;
    margin-right: 20rpx;
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
}

.slide_button {
    width: 50%;
    margin: 0 auto;
    height: 5%;
}

.divLine {
    background: #E0E3DA;
    width: 100%;
    height: 5rpx;
    margin: 10rpx 0rpx;
}