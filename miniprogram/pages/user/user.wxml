<!-- miniprogram/pages/exchange/exchange.wxml -->
<van-row>
    <van-col span="8" offset="8">
        <view class="avater">
            <button class="btn" loading="{{loading}}" disabled="{{disabled}}" style="background-image: url({{avatarUrl}})" open-type="getUserInfo" bindgetuserinfo="onGetUserInfo"></button>
            <text class="username">{{username}}</text>
        </view>
    </van-col>
</van-row>
<view class="divLine"></view>
<van-row>
    <van-col span="24">
        <van-collapse accordion value="{{ activeNames }}" bind:change="onChange">
            <van-collapse-item name="1" title="我的积分" icon="balance-o" value="{{point}}" label="{{desc}}">
                <van-cell title="如何快速赚取积分?" is-link />
            </van-collapse-item>
            <van-collapse-item name="2" title="我的卡券" icon="idcard" value="{{tickets.length}}" label="{{tickets_label}}">
                <van-cell wx:if="{{logged && tickets.length!=0}}" title="详细信息" is-link></van-cell>
                <van-cell wx:elif="{{logged}}" title="您还没有卡券" icon="info-o" value="如何兑换卡券?" is-link></van-cell>
                <van-cell wx:else title="请先登录" icon="warn-o" value="点击头像登录" bindtap="onTapDebug"></van-cell>
            </van-collapse-item>
            <van-collapse-item name="3" title="我的回收记录" icon="records" value="{{recycle_records}}" label="blahblahblah">
                <van-cell wx:if="{{  logged && recycle_records.length!=0 }}" title="详细记录" value="点此查看" is-link></van-cell>
                <van-cell wx:elif="{{ logged }}" icon="info-o" title="您没有回收记录" value="如何完成一次回收?" is-link></van-cell>
                <van-cell wx:else title="请先登录" icon="warn-o" value="点击头像登录" bindtap="onTapDebug"></van-cell>
            </van-collapse-item>
            <van-collapse-item name="4" title="关于我们" icon="friends-o" label="一些俏皮的话">
                {{desc_of_team}}
            </van-collapse-item>
        </van-collapse>
        <!-- <van-popup show="{{ show }}" bind:close="onClose">内容</van-popup> -->
        <!-- <view class="btn-group">
            <template is="item" wx:for="{{button_name}}" wx:for-item="it" data="{{...it}}"></template>
        </view> -->
    </van-col>
</van-row>
<template name="item">
    <view class="btn-item">
        <van-button custom-class="me_btn" type="default" size="large">{{ name }}</van-button>
    </view>
</template>