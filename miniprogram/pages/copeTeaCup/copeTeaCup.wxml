<!-- miniprogram/pages/copeTeaCup/copeTeaCup.wxml -->
<van-row>
    <van-col span="18">
        <text style="font-weight:600;font-size:40rpx;padding:20px 15px 15px 15px;">{{ name?name: '未指定' }}奶茶杯回收服务
        </text>
    </van-col>
</van-row>
<view class="divLine"></view>
<view class="logo">
    <van-row>
        <van-col span="12" offset="6">
            <image src="{{logoUrl}}" mode="widthFix" style="width:100%" />
        </van-col>
    </van-row>
</view>
<view class="form-wrap">
    <!-- <text style="margin: 15rpx; font-size: 28rpx;">填写信息</text> -->
    <van-panel title="填写信息">
        <van-cell-group>
            <van-field value="{{ teaCupCode }}" required label="奶茶杯编号" icon="question-o" placeholder="请输入你的编号" bind:click-icon="onClickQuestionIcon"></van-field>
            <van-cell is-link title="上传图片" label="拍下奶茶杯编号位置的图片在这儿上传~" value="{{ imgUpLoadType?'上传好啦':'未上传'}}"></van-cell>
        </van-cell-group>
    </van-panel>
    
